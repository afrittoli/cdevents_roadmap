\mode<presentation>

% Color Palette
\definecolor{myblack}{RGB}{71,68,68}
\definecolor{myblue}{RGB}{15,111,255}
\definecolor{myteal}{RGB}{32,213,210}
\definecolor{mygray}{RGB}{143,139,139}
\definecolor{titlegray}{RGB}{71,68,68}
\definecolor{mylightgray}{RGB}{234,234,234}
\definecolor{mydarkblue}{RGB}{0,54,135}
\definecolor{mydarkteal}{RGB}{16,106,105}
\definecolor{tektonblue}{RGB}{0,15,159}
\definecolor{tektonred}{RGB}{253,73,92}
\definecolor{tektonlilac}{RGB}{185,108,208}
\definecolor{myfinalblue}{RGB}{0,35,47}

% Colors
% Title slide
\setbeamercolor*{title page header}{fg=white}
\setbeamercolor*{author}{fg=white}
\setbeamercolor*{date}{fg=white}

% Regular slide
\setbeamercolor*{footline}{fg=myblack}
\setbeamercolor*{background canvas}{bg=mylightgray}
\setbeamercolor*{frametitle}{fg=titlegray}
\setbeamercolor*{itemize item}{fg=myblack}
\setbeamercolor*{normal text}{fg=myblack}

% License text on images
\setbeamercolor{photolicense}{fg=white}
\setbeamerfont{photolicense}{size=\fontsize{6}{6}\selectfont}

% Large central slide
\setbeamerfont{largecentral}{size=\fontsize{40}{40}\selectfont}

% TOC
\setbeamerfont{section in toc}{size=\fontsize{18}{18}\selectfont}

% Hyperlinks colours
\hypersetup{colorlinks,linkcolor=white,urlcolor=white}

% Fonts
\setsansfont{IBMPlexSans}
\setmonofont{IBMPlexMono}
\setbeamerfont{title}{size=\fontsize{24}{24}\selectfont}
\setbeamerfont{title}{family=\fontspec{IBMPlexMono}}
\setbeamerfont{section name}{size=\fontsize{20}{20}\selectfont}
\setbeamerfont{author}{size=\fontsize{8}{8}\selectfont}
\setbeamerfont{caption}{size=\scriptsize}

\newcommand{\settextcolour}[1]{
    \setbeamercolor*{normal text}{fg=#1}
    \setbeamercolor*{itemize item}{fg=#1}
    \setbeamercolor*{item}{fg=#1}
    \setbeamercolor*{subitem}{fg=#1}
    \setbeamercolor*{block body}{fg=#1}
    \usebeamercolor[fg]{normal text}
}

\mode
<all>
